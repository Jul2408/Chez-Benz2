# ============================================
# CHEZ-BEN2 - Environment Variables Template
# ============================================
# Copier ce fichier et le renommer en .env.local
# Puis remplir toutes les valeurs manquantes
# ============================================

# ============================================
# Supabase Configuration
# ============================================

# URL publique de votre projet Supabase
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Clé publique (anon key) - Safe pour le client
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-placeholder

# Clé service role - UNIQUEMENT côté serveur
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-placeholder

# ============================================
# Database Configuration (Prisma)
# ============================================
# IMPORTANT: Obtenir ces URLs depuis Supabase Dashboard
# Settings → Database → Connection string

# Connection pooling (pour Prisma avec PgBouncer)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres?pgbouncer=true
DATABASE_URL="postgresql://postgres:[YOUR_PASSWORD]@db.your-project.supabase.co:5432/postgres?pgbouncer=true"

# Direct connection (pour migrations)
# Format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
DIRECT_URL="postgresql://postgres:[YOUR_PASSWORD]@db.your-project.supabase.co:5432/postgres"

# ============================================
# Application Configuration
# ============================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Chez-BEN2

# ============================================
# DigitalOcean Spaces (Object Storage)
# ============================================
# Pour l'upload d'images

# Endpoint de votre région (ex: nyc3.digitaloceanspaces.com)
DO_SPACES_ENDPOINT=

# Access Key ID
DO_SPACES_KEY=

# Secret Access Key
DO_SPACES_SECRET=

# Nom de votre bucket/space
DO_SPACES_BUCKET=

# Région (ex: nyc3, fra1, sgp1)
DO_SPACES_REGION=

# CDN URL (optionnel, pour servir les images via CDN)
DO_SPACES_CDN_URL=

# ============================================
# Email Configuration (Optionnel)
# ============================================
# Pour les notifications par email

SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME=

# ============================================
# SMS Configuration (Optionnel)
# ============================================
# Pour les notifications SMS

SMS_PROVIDER=
SMS_API_KEY=
SMS_SENDER_ID=

# ============================================
# Analytics (Optionnel)
# ============================================

NEXT_PUBLIC_GA_MEASUREMENT_ID=
NEXT_PUBLIC_HOTJAR_ID=

# ============================================
# Autres configurations
# ============================================

# Mode de développement
NODE_ENV=development

# Secret pour JWT/sessions (générer avec: openssl rand -base64 32)
NEXTAUTH_SECRET=

# URL de callback pour OAuth
NEXTAUTH_URL=http://localhost:3000
