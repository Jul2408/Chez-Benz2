# ============================================
# CHEZ-BEN2 - Variables d'environnement
# ============================================
# Copiez ce fichier en .env.local et remplissez les valeurs

# ============================================
# APPLICATION
# ============================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Chez-BEN2
NODE_ENV=development

# ============================================
# SUPABASE - Database & Auth
# ============================================
# URL de votre projet Supabase
NEXT_PUBLIC_SUPABASE_URL=https://votre-projet.supabase.co

# Clé publique (anon key) - safe pour le client
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Clé secrète (service role key) - JAMAIS exposer au client
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# JWT Secret pour vérifier les tokens
SUPABASE_JWT_SECRET=votre-jwt-secret

# ============================================
# SUPABASE AUTH - Configuration OTP/SMS
# ============================================
# Provider SMS pour OTP (Twilio, MessageBird, etc.)
SUPABASE_SMS_PROVIDER=twilio

# Twilio credentials (si utilisé)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=votre-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ============================================
# DIGITALOCEAN SPACES - Stockage fichiers
# ============================================
DO_SPACES_KEY=votre-spaces-access-key
DO_SPACES_SECRET=votre-spaces-secret-key
DO_SPACES_BUCKET=chez-ben2
DO_SPACES_REGION=fra1
DO_SPACES_ENDPOINT=https://fra1.digitaloceanspaces.com
DO_SPACES_CDN_ENDPOINT=https://chez-ben2.fra1.cdn.digitaloceanspaces.com

# URL publique pour les images
NEXT_PUBLIC_DO_SPACES_URL=https://chez-ben2.fra1.cdn.digitaloceanspaces.com

# ============================================
# EMAILS - Configuration SMTP
# ============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@chez-ben2.cm
SMTP_PASSWORD=votre-mot-de-passe
SMTP_FROM_NAME=Chez-BEN2
SMTP_FROM_EMAIL=noreply@chez-ben2.cm

# ============================================
# NOTIFICATIONS PUSH
# ============================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=votre-vapid-public-key
VAPID_PRIVATE_KEY=votre-vapid-private-key
VAPID_SUBJECT=mailto:contact@chez-ben2.cm

# ============================================
# ANALYTICS & MONITORING
# ============================================
# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry (Error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# ============================================
# PAIEMENTS (futur)
# ============================================
# Mobile Money - Orange/MTN
ORANGE_MONEY_API_KEY=
MTN_MOMO_API_KEY=
MTN_MOMO_API_SECRET=

# ============================================
# RATE LIMITING & SECURITY
# ============================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# Secret pour les webhooks
WEBHOOK_SECRET=votre-webhook-secret

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_PREMIUM=false
NEXT_PUBLIC_ENABLE_MOBILE_MONEY=false
NEXT_PUBLIC_MAINTENANCE_MODE=false
